{
  "compilerOptions": {
	"lib": [
	  "DOM",
	  "DOM.Iterable"
	],
	"noImplicitAny": true,
	"noImplicitOverride": true,
	"strict": true,
	"module": "es6",
	"target": "es2019",
	"sourceMap": false,
	"allowJs": true,
	"moduleResolution": "node",
	"skipLibCheck": true,
	"outDir": "lib",
  },
  "include": [
	"src",
	"typings/"
  ],
  "exclude": [
	"tests"
  ]
}
